{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "Contact API",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/Contacts/": {
      "GET all": {
        "description": "This gets all of the contacts",
        "parameters": [
        ],
        "responses": {
          "200": {
            "description": "Here is a list of all of the contacts"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "POST": {
        "description": "This creates a contact",
        "parameters": [{
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "any"
                },
                "lastName": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                  "favoriteColor": {
                  "example": "any"
                },
                "birthday": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "You created a new contact"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{_id}": {
      "GET by id": {
        "description": "Get a contact by their id",
        "parameters": [{
            "name": "_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "This is the contact you requested"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "PUT" : {
        "description": "update a contact by id.",
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
          "name": "contact info",
          "in": "body",
          "schema": {
            "type": "object",
            "properties": {
              "firstName": {
                "example": "any"
              },
              "lastName": {
                "example": "any"
              },
              "email": {
                "example": "any"
              },
                "favoriteColor": {
                "example": "any"
              },
              "birthday": {
                "example": "any"
              }
            }
          }
        }
      ],
        "responses": {
          "200": {
            "description": "You updated a contact, make sure to double check your work"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "DELETE" : {
        "description": "delete contact by id, the delete above is one of the 4 verbs I use, so it knew what to do",
        "parameters": [{
            "name": "_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact deleted, good job (hopefully you meant to do that)"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}